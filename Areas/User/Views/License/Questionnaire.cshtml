@model Medical.Models.LicenseQuestionnaireModel

@{
    ViewBag.Title = "Questionnaire";
    Layout = "~/Views/Shared/_AdminLTELayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Questionnarie
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">New License Application Form</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-1" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforAPMCE, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "questionnaire"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforAPMCE, "Do you require a license to establish a Hospital (APMCE)?", htmlAttributes: new { @class = "control-label" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforPCPNDT, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "questionnaire"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforPCPNDT, "Do you require a License to establish a Diagnostic Centre (PCPNDT)?", htmlAttributes: new { @class = "control-label" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforBloodBank, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "questionnaire"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforBloodBank, "Do you require NOC by SBTC to establish a Blood Bank?", htmlAttributes: new { @class = "control -label questionnaire" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforDrugStore, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "questionnaire"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforDrugStore, "Do you require a license to establish a Drug Store?", htmlAttributes: new { @class = "control -label" })
                                </div>
                            </div>
                            <div class="row drugstore" hidden>
                                <div class="col-md-2" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforDrugStore, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "chkdrugstore"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforDrugStore, "Do you require license to establish Allopathic Drug store?", htmlAttributes: new { @class = "control -label" })
                                </div>
                            </div>
                            <div class="row drugstore" hidden>
                                <div class="col-md-2" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforDrugStore, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "chkdrugstore"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforDrugStore, "Do you require license to establish Ayurvedic Drug store?", htmlAttributes: new { @class = "control -label" })
                                </div>
                            </div>
                            <div class="row drugstore" hidden>
                                <div class="col-md-2" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforDrugStore, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "chkdrugstore"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforDrugStore, "Do you require license to establish Homeopathic Drug store?", htmlAttributes: new { @class = "control -label" })
                                </div>
                            </div>
                            <div class="row drugstore" hidden>
                                <div class="col-md-2" style="text-align:right;">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.HasAppliedforDrugStore, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "chkdrugstore"
                                       }
                                   })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.HasAppliedforDrugStore, "Do you require license to establish Unani Drug store?", htmlAttributes: new { @class = "control -label" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2 pull-right">
                                    <input type="submit" id="btnNext" value="Next" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
<script>
    $(function () {
        $('#btnNext').on('click', function (e) {
            var type = [];
            $.each($("input.questionnaire:checkbox"), function () {
                if ($(this).parent('[class*="icheckbox"]').hasClass("checked"))
                    type.push(this.value);
            });

            if (type.length == 0) {
                alert('Please select at least one Facility');
                return false;
            }
            else {
                if ($('#HasAppliedforDrugStore').parent('[class*="icheckbox"]').hasClass("checked")) {
                    var chkdrugstorearr = [];
                    $.each($("input.chkdrugstore:checkbox"), function () {
                        if ($(this).parent('[class*="icheckbox"]').hasClass("checked"))
                            chkdrugstorearr.push(this.value);
                    });

                    if (chkdrugstorearr.length == 0) {
                        alert('Please select at least one Drug Store Type');
                        return false;
                    }
                }
            }
        });


        $('input[id="HasAppliedforDrugStore"]').on('ifClicked', function (event) {
            if (!this.checked) {
                $('.drugstore').show();
            }
            else {
                $('.drugstore').hide();
            }
        });

    });
</script>
